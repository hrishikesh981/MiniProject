<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slideimage"
        android:layout_width="166dp"
        android:layout_height="193dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/pill_icon" />

    <TextView
        android:id="@+id/slidedesc"
        android:layout_width="250dp"
        android:layout_height="72dp"
        android:layout_below="@+id/slideheading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-225dp"
        android:fontFamily="@font/archivo_narrow"
        android:text="Your one stop solution to buying medicines online."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/slideheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="225dp"
        android:fontFamily="@font/archivo_narrow_bold"
        android:text="MEDICO"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>